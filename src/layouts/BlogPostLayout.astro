---
import BaseLayout from './Layout.astro'

const {frontmatter} = Astro.props;
---

<BaseLayout url={frontmatter.url} title={frontmatter.title}>
    <div class="container mx-auto px-5">
        <section class="[&>h1]:text-xl [&>h1]:font-extrabold [&>h2]:text-lg [&>h2]:font-bold [&>h3]:font-semibold [&>h3]:text-base [&>h4]:font-semibold">
            <slot />
            <p>Written by {frontmatter.author} on {frontmatter.date}</p>
        </section>
    </div>
</BaseLayout>
